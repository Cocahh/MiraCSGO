// Substitue o "MUDE" pelo seu

alias +mirar1 exec "viewmodel_offset_y -4; viewmodel_offset_z 1.15; viewmodel_fov 68; crosshair 0; +Mira1"
alias -mirar1 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira1"

alias +mirar2 exec "viewmodel_offset_y -4; viewmodel_offset_z 1.3; viewmodel_fov 68; crosshair 0; +Mira2"
alias -mirar2 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira2"


alias desativarMirar6 "alias toggleMirar6 ativarMirar6; -mirar6"

// Substitue o "MUDE" pelo seu

alias +mirar1 exec "viewmodel_offset_y -4; viewmodel_offset_z 1.15; viewmodel_fov 68; crosshair 0; +Mira1"
alias -mirar1 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira1"

alias +mirar2 exec "viewmodel_offset_y -4; viewmodel_offset_z 1.3; viewmodel_fov 68; crosshair 0; +Mira2"
alias -mirar2 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira2"

alias +mirar3 exec "viewmodel_offset_y -4; viewmodel_offset_z 1.4; viewmodel_fov 68; crosshair 0; +Mira3"
alias -mirar3 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira3"

alias +mirar4 exec "viewmodel_offset_y -4; viewmodel_offset_z 0.57; viewmodel_fov 68; crosshair 0; +Mira4"
alias -mirar4 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira4"

alias +mirar5 exec "viewmodel_offset_y -4; viewmodel_offset_z 0.9; viewmodel_fov 68; crosshair 0; +Mira5"
alias -mirar5 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira5"


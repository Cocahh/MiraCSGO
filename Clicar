alias -mirar6 exec "viewmodel_offset_y MUDE; viewmodel_offset_z MUDE; viewmodel_fov MUDE; crosshair 1; -Mira6"

// Substitua o "MUDE" pela key que deseja apertar para o +attack2

bind "MUDE" "+attack2"


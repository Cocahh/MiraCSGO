sv_competitive_minspec 0

viewmodel_offset_x "MUDE"                 // Substitue o "MUDE" pelo seu
viewmodel_offset_y "MUDE"                // Substitue o "MUDE" pelo seu
viewmodel_offset_z "MUDE"              // Substitue o "MUDE" pelo seu
viewmodel_fov "MUDE"                   // Substitue o "MUDE" pelo seu

alias +Mira1 "viewmodel_offset_x -5"
alias -Mira1 "viewmodel_offset_x MUDE"

alias +Mira2 "viewmodel_offset_x -6.25"
alias -Mira2 "viewmodel_offset_x MUDE"

alias +Mira3 "viewmodel_offset_x -2.8"
alias -Mira3 "viewmodel_offset_x MUDE"

alias +Mira4 "viewmodel_offset_x -3.8"
alias -Mira4 "viewmodel_offset_x MUDE"

alias +Mira5 "viewmodel_offset_x -5.15"
alias -Mira5 "viewmodel_offset_x MUDE"

alias +Mira6 "viewmodel_offset_x -5.22"
alias -Mira6 "viewmodel_offset_x MUDE"

alias toggleMirar1 "ativarMirar1";
alias ativarMirar1 "alias toggleMirar1 desativarMirar1; +mirar1";
alias desativarMirar1 "alias toggleMirar1 ativarMirar1; -mirar1"

alias toggleMirar2 "ativarMirar2";
alias ativarMirar2 "alias toggleMirar2 desativarMirar2; +mirar2"
alias desativarMirar2 "alias toggleMirar2 ativarMirar2; -mirar2"

alias toggleMirar3 "ativarMirar3";
